@model StunduSaraksts.ModelsDB.ConsultationAttendance

@{
    ViewData["Title"] = "Create";
}

<h1>Konsultāciju apmeklējums</h1>

<h4>Pieteikties</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        else
        {
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Consultation" />
                <div class="form-group row">
                    <label asp-for="Comment" class="control-label col-sm-2 col-form-label">Komentārs</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Comment" class="form-control"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    
                </div>


                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="form-group col-sm-10">
                        <input type="submit" value="Pieteikties" class="btn btn-primary" />
                        <a class="float-right btn btn-secondary" asp-controller="Consultations" asp-action="Index">Atcelt</a>
                    </div>
                </div>
</form>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
