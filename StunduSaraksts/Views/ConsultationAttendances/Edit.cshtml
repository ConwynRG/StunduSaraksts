@model StunduSaraksts.ModelsDB.ConsultationAttendance

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ConsultationAttendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        else
        {
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Consultation" />
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (Model.Attends)
                    {
                        <input type="submit" value="Atteikties" class="btn btn-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Pieteikties" class="btn btn-primary" />
                    }
                </div>
            </form>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
